color=#A4C2F4
separator_block_width=7
markup=none
SCRIPTS_ROOT=/home/vik/docs/dotfiles/.config/i3blocks/scripts
SCRIPTS_DIR=/home/vik/docs/dotfiles/.config/i3blocks/scripts/i3blocks-contrib
MY_SCRIPTS_DIR=/home/vik/docs/dotfiles/.config/i3blocks/scripts/my_scripts

[uptime]
command=$MY_SCRIPTS_DIR/uptime
label=
interval=60

[caps-lock]
command=xset -q | grep Caps | awk '{ if($4 == "on") print "Caps" }'
interval=once
signal=10
color=#d73a49

[num-lock]
command=xset -q | grep Num | awk '{ if($8 == "on") print "Nums" }'
interval=once
signal=10
color=#d73a49

[scroll-lock]
command=xset -q | grep Scroll | awk '{ if($12 == "on") print "Scroll" }'
interval=once
signal=10
color=#d73a49

[my-weather]
command=curl wttr.in?format="%t+%w+%C" | xargs echo
interval=3600

[aur-update]
command=$SCRIPTS_DIR/aur-update/aur-update
markup=pango
interval=43200
UPDATE_COLOR=#FCE14B
QUIET=1
IGNORE=root vidyodesktop

[bandwidth1]
command=$SCRIPTS_DIR/bandwidth/bandwidth
interval=5
INTERFACE=wlp2s0
INLABEL=
OUTLABEL=
#TREAT_UNKNOWN_AS_UP=0


[my-wifi]
command="$MY_SCRIPTS_DIR/wifi"
LABEL=
