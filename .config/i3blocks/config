[disk-home]
label=
command=df -h -P -l $HOME | awk '/\/.*/ { print $4"/"$2; exit 0 }'
interval=30
separator=false

[disk-home]
label=
command=df -h -P -l /home/vik/Documents/_data | awk '/\/.*/ { print $4"/"$2; exit 0 }'
interval=30

[temperature]
