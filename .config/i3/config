bar {
  colors {
    background #$bgcolor
    statusline #$txtcolor
    separator #$faded_txt_color
    # border background text
    focused_workspace #$fgcolor #$bgcolor #$txtcolor
    inactive_workspace #$bgcolor #$bgcolor #$txtcolor
    urgent_workspace #$urgent #$urgent #$txtcolor
  }

  #font xft:monospace regular 8
  font pango:DejaVu Sans Mono, FontAwesome 8
  position bottom
  #status_command i3status -c ~/.config/i3/i3status.conf
  status_command i3blocks
}

